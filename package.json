{
  "name": "cuda-toolkit",
  "version": "0.3.7",
  "description": "GitHub Action to install the NVIDIA CUDA Toolkit",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc  --newLine lf",
    "format": "prettier --write **/*.ts jest.config.js",
    "format-check": "prettier --check **/*.ts jest.config.js",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okazunori2013/cuda-toolkit.git"
  },
  "keywords": [],
  "author": "okazunori2013",
  "bugs": {
    "url": "https://github.com/okazunori2013/cuda-toolkit/issues"
  },
  "homepage": "https://github.com/okazunori2013/cuda-toolkit#readme",
  "volta": {
    "node": "16.19.1"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.1.0",
    "@actions/cache": "^3.2.4",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "@types/semver": "^7.5.6",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.6",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
